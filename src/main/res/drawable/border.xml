<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Item 1: Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2B60DE" /> <!-- Border color, change as needed -->
        </shape>
    </item>

    <!-- Item 2: Center -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#BDEDFF" /> <!-- Center color, change as needed -->
        </shape>
    </item>
</layer-list>